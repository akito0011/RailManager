<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.home.Home">

    <ImageView
        android:id="@+id/imageBlue"
        android:layout_width="700dp"
        android:layout_height="700dp"
        android:layout_marginBottom="420dp"
        android:background="@drawable/blue_rounded_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </ImageView>

    <TextView
        android:id="@+id/benvenutoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="Benvenuto"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/buttonCreaItinerario"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="204dp"
        android:background="@drawable/circle_button"
        android:elevation="2dp"
        android:src="@drawable/add_button"
        app:layout_constraintBottom_toBottomOf="@+id/imageBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/buttonLogout"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="204dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/circle_button"
        android:elevation="2dp"
        android:padding="13dp"
        android:src="@drawable/logout"
        app:layout_constraintBottom_toBottomOf="@+id/imageBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textCreaItinerario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="Crea itinerario"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="@+id/buttonCreaItinerario"
        app:layout_constraintStart_toStartOf="@+id/buttonCreaItinerario"
        app:layout_constraintTop_toBottomOf="@+id/buttonCreaItinerario" />

    <TextView
        android:id="@+id/textLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="Logout"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="@+id/buttonLogout"
        app:layout_constraintStart_toStartOf="@+id/buttonLogout"
        app:layout_constraintTop_toBottomOf="@+id/buttonLogout" />


</androidx.constraintlayout.widget.ConstraintLayout>
